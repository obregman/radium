spec:
  components:
    - views:
        name: Views
        description: UI components and visualization panels
        files:
          - src/views/view-manager.ts
        external:
    
    - store:
        name: Data Store
        description: Database schema and storage adapter
        files:
          - src/store/**
        external:
          - type: SQLite
            name: GraphDB
            description: Stores code graph and analysis data
            usedBy:
              - src/store/sql-adapter.ts
              - src/store/schema.ts
    
    - indexer:
        name: Code Indexer
        description: Parses and indexes source code files
        files:
          - src/indexer/**
        external:
    
    - git:
        name: Git Integration
        description: Tracks git changes and diffs
        files:
          - src/git/**
        external:
    
    - analysis:
        name: Code Analysis
        description: Analyzes code impact and dependencies
        files:
          - src/analysis/**
        external:
    
    - orchestrator:
        name: LLM Orchestrator
        description: Coordinates LLM interactions and plan execution
        files:
          - src/orchestrator/**
        external:
          - type: API
            name: OpenAI API
            description: LLM service for code analysis
            usedBy:
              - src/orchestrator/llm-orchestrator.ts
    
    - config:
        name: Configuration
        description: Configuration loader and management
        files:
          - src/config/**
        external:

