{
  "name": "radium",
  "displayName": "Radium - Vibe Coding Visualizer",
  "description": "A living, zoomable map of your codebase that visualizes everything the LLM touches",
  "version": "0.1.0",
  "publisher": "radium",
  "repository": {
    "type": "git",
    "url": "https://github.com/obregman/radium.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCommand:vibe.openMap",
    "onCommand:vibe.showChanges",
    "onCommand:vibe.applyLLMPlan",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibe.openMap",
        "title": "Radium: Open Map",
        "icon": "$(graph)"
      },
      {
        "command": "vibe.showChanges",
        "title": "Radium: Show Changes",
        "icon": "$(diff)"
      },
      {
        "command": "vibe.applyLLMPlan",
        "title": "Radium: Apply LLM Plan",
        "icon": "$(check)"
      },
      {
        "command": "vibe.undoSession",
        "title": "Radium: Undo Last LLM Session",
        "icon": "$(discard)"
      },
      {
        "command": "vibe.explainSelection",
        "title": "Radium: Explain Selection",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "vibe.findImpact",
        "title": "Radium: Find Impact",
        "icon": "$(references)"
      },
      {
        "command": "vibe.previewLLMPlan",
        "title": "Radium: Preview LLM Plan from Clipboard",
        "icon": "$(preview)"
      },
      {
        "command": "vibe.exportSessionPatch",
        "title": "Radium: Export Session Patch",
        "icon": "$(export)"
      },
      {
        "command": "vibe.refreshSessions",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vibe.createTestSession",
        "title": "Radium: Create Test Session (Demo)",
        "icon": "$(beaker)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibe-explorer",
          "title": "Radium",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "vibe-explorer": [
        {
          "id": "vibe.codeSlices",
          "name": "Code Slices"
        },
        {
          "id": "vibe.sessions",
          "name": "Recent Sessions"
        },
        {
          "id": "vibe.issues",
          "name": "Issues"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vibe.refreshSessions",
          "when": "view == vibe.sessions",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "vibe.explainSelection",
          "when": "editorHasSelection",
          "group": "vibe"
        },
        {
          "command": "vibe.findImpact",
          "when": "editorHasSelection",
          "group": "vibe"
        }
      ]
    },
    "configuration": {
      "title": "Radium",
      "properties": {
        "vibe.indexer.maxCPU": {
          "type": "number",
          "default": 2,
          "description": "Maximum CPU cores to use for indexing"
        },
        "vibe.privacy.upload": {
          "type": "string",
          "enum": [
            "none",
            "symbols",
            "full"
          ],
          "default": "none",
          "description": "Privacy level for optional cloud indexing"
        },
        "vibe.graph.layout": {
          "type": "string",
          "enum": [
            "force",
            "hierarchical"
          ],
          "default": "force",
          "description": "Graph layout algorithm"
        },
        "vibe.layers.default": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "structure",
            "relations",
            "changes"
          ],
          "description": "Default visible layers in the map"
        },
        "vibe.tests.autoRun": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run impacted tests after LLM changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@electron/rebuild": "3.7.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/d3": "^7.4.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/sql.js": "1.4.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/js-yaml": "4.0.9",
    "chokidar": "^3.5.3",
    "fast-diff": "^1.3.0",
    "js-yaml": "4.1.0",
    "sql.js": "1.13.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  }
}
