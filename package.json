{
  "name": "radium",
  "displayName": "Radium - Vibe Coding Visualizer",
  "description": "A living, zoomable map of your codebase that visualizes everything the LLM touches",
  "version": "0.53.0",
  "publisher": "radium",
  "repository": {
    "type": "git",
    "url": "https://github.com/obregman/radium.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "radium.openMap",
        "title": "Radium: Codebase Map",
        "icon": "$(graph)"
      },
      {
        "command": "radium.openFeaturesMap",
        "title": "Radium: Features Map",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "radium.reindex",
        "title": "Radium: Re-index Workspace",
        "icon": "$(sync)"
      },
      {
        "command": "radium.realtimeChanges",
        "title": "Radium: Real-time Changes",
        "icon": "$(eye)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "radium-explorer",
          "title": "Radium",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Radium",
      "properties": {
        "radium.indexer.maxCPU": {
          "type": "number",
          "default": 2,
          "description": "Maximum CPU cores to use for indexing"
        },
        "radium.privacy.upload": {
          "type": "string",
          "enum": [
            "none",
            "symbols",
            "full"
          ],
          "default": "none",
          "description": "Privacy level for optional cloud indexing"
        },
        "radium.graph.layout": {
          "type": "string",
          "enum": [
            "force",
            "hierarchical"
          ],
          "default": "force",
          "description": "Graph layout algorithm"
        },
        "radium.layers.default": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "structure",
            "relations",
            "changes"
          ],
          "description": "Default visible layers in the map"
        },
        "radium.tests.autoRun": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run impacted tests after LLM changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "package:safe": "source ~/.nvm/nvm.sh && nvm use && npm run package"
  },
  "devDependencies": {
    "@electron/rebuild": "3.7.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/d3": "^7.4.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/sql.js": "1.4.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/js-yaml": "4.0.9",
    "chokidar": "^3.5.3",
    "fast-diff": "^1.3.0",
    "js-yaml": "4.1.0",
    "sql.js": "1.13.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  }
}
